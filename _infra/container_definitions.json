[
  {
    "name": "main",
    "image": "${account_id}.dkr.ecr.${region}.amazonaws.com/${name}:${image_tag}",
    "cpu": 0,
    "memory": 128,
    "portMappings": [
      {
        "containerPort": 1323,
        "hostPort": 1323,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-region": "${region}",
        "awslogs-group": "/${name}/ecs",
        "awslogs-stream-prefix": "main"
      }
    },
    "secrets": [
      {
        "name": "DB_PASSWORD",
        "valueFrom": "${db_password}"
      }
    ],
    "environment": [
      {
        "name": "PORT",
        "value": "1323"
      },
      {
        "name": "DB_HOST",
        "value": "${db_host}"
      },
      {
        "name": "DB_PORT",
        "value": "${db_port}"
      },
      {
        "name": "DB_USER",
        "value": "${db_user}"
      },
      {
        "name": "DB_DATABASE",
        "value": "${db_database}"
      }
    ]
  }
]
